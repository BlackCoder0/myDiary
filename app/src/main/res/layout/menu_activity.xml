<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/profile_theme_bg_taki" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/layout_phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:id="@+id/menu_phone_img"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:src="@drawable/outline_phone_24"
                android:tint="@color/boy"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/menu_phone_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="紧急联络"
                android:textColor="@color/boy"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="24dp"/>
            <TextView
                android:id="@+id/menu_JT1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=">"
                android:textColor="@color/boy"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/menu_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:background="@color/boy"
       />



        <LinearLayout
            android:id="@+id/layout_diary"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:id="@+id/menu_diary_img"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_topic_diary"
                android:tint="@color/boy"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/menu_diary_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DIARY"
                android:textColor="@color/boy"
                android:layout_marginLeft="10dp"
                android:layout_weight="1.2"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="24dp"/>
            <TextView
                android:id="@+id/menu_JT2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=">"
                android:textColor="@color/boy"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/menu_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:background="@color/boy"
            />

        <LinearLayout
            android:id="@+id/layout_no"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:id="@+id/menu_NO_img"
                android:layout_width="55dp"
                android:layout_height="35dp"
                android:layout_margin="12dp"
                android:src="@drawable/ic_topic_memo"
                android:tint="@color/boy"
                android:scaleType="fitCenter"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/menu_NO_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="禁止事项"
                android:textColor="@color/boy"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="24dp"/>
            <TextView
                android:id="@+id/menu_JT3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=">"
                android:textColor="@color/boy"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:layout_gravity="right"
                android:gravity="center"
                android:textSize="20dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/menu_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="35dp"
            android:background="@color/boy"
            />

    </LinearLayout>
</LinearLayout>