<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/diary_background"
    android:layout_height="match_parent">

    <!-- 日期和星期 垂直排列 -->
    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="12"

            android:textSize="40sp"
            android:textColor="@color/boy"/>

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:text="Thu."
            android:textSize="16sp"
            android:textColor="@color/boy"/>
    </LinearLayout>


    <!-- 时间和标题 垂直排列，位于日期右侧 -->
    <LinearLayout
        android:id="@+id/ll_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/ll_date"
        app:layout_constraintTop_toTopOf="@id/ll_date">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间（时：分）"
            android:textSize="14sp"
            android:textColor="@color/boy"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="23sp"
            android:textColor="@color/boy"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            />
        <!-- 正文摘要，和星期同一行 -->
        <TextView
            android:id="@+id/tv_body"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="这里是正文摘要，最多20字，多余显示省略号"
            android:textSize="12sp"
            android:textColor="@color/boy"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="16dp"
            />
    </LinearLayout>

    <!-- 右上角图标 水平排列 -->
    <LinearLayout
        android:id="@+id/ll_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="20dp"
            android:visibility="gone"
            android:contentDescription="天气图标"
            android:tint="@color/boy" />

        <ImageView
            android:id="@+id/iv_mood"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            android:contentDescription="心情图标"
            android:tint="@color/boy"/>

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_bookmark_border"
            android:contentDescription="标签图标"
            android:tint="@color/gray"
            /> <!-- 默认灰色 -->




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>